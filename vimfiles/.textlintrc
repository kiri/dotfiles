{
  "filters": {},
  "rules": {
    // 技術文書向けのtextlintルールプリセット
    "preset-ja-technical-writing": {
      "ja-no-weak-phrase": false,
      "ja-no-mixed-period": false,
      "no-exclamation-question-mark": false
    },

    // JTF日本語標準スタイルガイド
    "preset-jtf-style": true,

    // textlint rule for prh/prh: proofreading helper.
    //"prh": false, 
    "prh": {
      "rulePaths" :[ 
      "~/App/node-v18.15.0-win-x64/node_modules/textlint-rule-prh/node_modules/prh/prh-rules/media/techbooster.yml",
      "~/App/node-v18.15.0-win-x64/node_modules/textlint-rule-prh/node_modules/prh/prh-rules/media/WEB+DB_PRESS.yml"
      ] 
      },

    // 同義語を表記ゆれをチェックするtextlintルール
    "@textlint-ja/no-synonyms": {
      //許可するワードの配列(無視する)
      "allows": ["ウェブアプリ", "ウェブアプリケーション"],
      //使用を許可する見出し語の配列(これ以外の同義語をエラーにする)
      "preferWords": ["ユーザー"],
      "allowAlphabet": false,
      "allowNumber": false,
      "allowLexeme": false
    },
  }
}
